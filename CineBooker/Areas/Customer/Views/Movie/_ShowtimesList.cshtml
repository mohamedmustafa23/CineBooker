@model List<CineBooker.ViewModels.CinemaShowtimeVM>

@if (Model != null && Model.Any())
{
    <div class="row g-4 fade-in">
        @foreach (var cinema in Model)
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm cinema-card-bg">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <!-- Cinema Info -->
                            <div class="col-md-4 border-end-md border-secondary mb-3 mb-md-0">
                                <h5 class="fw-bold mb-1 text-primary">@cinema.CinemaName</h5>
                                <p class="text-muted mb-0 small">
                                    <i class="bi bi-geo-alt me-1"></i>@cinema.Address
                                </p>
                                <div class="mt-2">
                                    <span class="badge bg-secondary-subtle text-body border me-1">3D</span>
                                    <span class="badge bg-secondary-subtle text-body border">Dolby</span>
                                </div>
                            </div>

                            <!-- Showtimes Buttons -->
                            <div class="col-md-8 ps-md-4">
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var show in cinema.Shows)
                                    {
                                        string btnClass = show.IsFull ? "btn-outline-secondary disabled" : "btn-outline-danger";
                                        string href = show.IsFull ? "#" : Url.Action("Book", "Booking", new { showId = show.ShowId });

                                        <a href="@href" class="btn @btnClass showtime-btn text-center p-2" style="min-width: 100px;">
                                            <div class="fw-bold fs-6">@show.StartTime.ToString("hh:mm tt")</div>
                                            <small class="@show.StatusColorClass d-block" style="font-size: 0.7rem;">@show.Status</small>
                                            <span class="text-muted" style="font-size: 0.65rem;">@show.HallName</span>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5 fade-in">
        <i class="bi bi-calendar-x display-1 text-muted opacity-50"></i>
        <h4 class="mt-3 text-body">No shows available</h4>
        <p class="text-muted">Please select another date.</p>
    </div>
}