@model Address

@{
    ViewData["Title"] = "Address Details";
}

<div class="page-header">
    <h1><i class="bi bi-person-video3 me-2"></i>Address Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <img src="@Model.PhotoUrl" class="rounded-circle mb-3" style="width: 200px; height: 200px;">
                <h3 class="mb-1">@Model.City</h3>
                <div class="d-flex justify-content-center gap-3">
                    <div class="text-center">
                        <div class="fs-4 fw-bold text-primary">@Model.Cinemas.Count</div>
                        <small class="text-muted">Cinemas</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-film me-2"></i>Cinemas</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>City</th>
                                <th>AddressLine</th>
                                <th>ZipCode</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var cinema in Model.Cinemas)
                            {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40x60" class="rounded me-2" alt="Poster">
                                        <div>
                                            <div class="fw-semibold">@cinema.Address.City</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <a href="/Admin/Cinema/Details/@cinema.Id" class="btn btn-sm btn-outline-info btn-action">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="assignMovieModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-film me-2"></i>Assign to Movie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-floating mb-3">
                    <select class="form-select" id="selectMovie">
                        <option value="">Select Movie</option>
                        <option value="5">Oppenheimer</option>
                        <option value="6">Ford v Ferrari</option>
                        <option value="7">Vice</option>
                    </select>
                    <label for="selectMovie">Movie</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="characterName" placeholder="Character Name">
                    <label for="characterName">Character Name</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Assign
                </button>
            </div>
        </div>
    </div>
</div>
