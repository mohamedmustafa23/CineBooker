@{
    ViewData["Title"] = "Create Address";
}

<div class="page-header">
    <h1><i class="bi fa-y-combinator-square me-2"></i>Create Address</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-2"></i>Address Information
                </div>
                <div class="card-body">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="City" name="City" placeholder="City Name" required>
                        <label for="City">City *</label>
                        <div class="invalid-feedback">Please enter the city name.</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-image me-2"></i>Photo
                </div>
                <div class="card-body">
                    <div class="image-upload-preview mb-3" id="photoPreview" data-input="#PhotoFile" style="height: 200px; max-width: 200px;">
                        <div class="upload-placeholder">
                            <i class="bi bi-person-bounding-box"></i>
                            <div>Click to upload</div>
                            <small class="text-muted">JPG, PNG (Max 5MB)</small>
                        </div>
                    </div>
                    <input type="file" class="form-control image-upload-input" id="PhotoFile" name="img" accept="image/*" data-preview="#photoPreview" hidden>
                    <button type="button" class="btn btn-outline-primary w-100" onclick="document.getElementById('PhotoFile').click()">
                        <i class="bi bi-upload me-1"></i>Choose Photo
                    </button>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-lg me-1"></i>Create Address
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
