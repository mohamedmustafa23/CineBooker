@model CineBooker.Models.Show
@using CineBooker.Enums

@{
    ViewData["Title"] = "Show Details";

    var totalSeats = Model.ShowSeats?.Count ?? 0;
    var bookedSeats = Model.ShowSeats?.Count(s => s.Status == SeatStatus.Booked) ?? 0;
    var lockedSeats = Model.ShowSeats?.Count(s => s.Status == SeatStatus.Locked) ?? 0; 
    var availableSeats = totalSeats - bookedSeats - lockedSeats;

    var revenue = Model.Bookings?.Sum(b => b.Amount) ?? 0;

    int maxRows = Model.ShowSeats?.Any() == true ? Model.ShowSeats.Max(s => s.Seat.SeatRow) : 0;
    int maxCols = Model.ShowSeats?.Any() == true ? Model.ShowSeats.Max(s => s.Seat.SeatCol) : 0;
}

<div class="page-header">
    <h1><i class="bi bi-calendar-event me-2"></i>Show Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Left Column: Info & Stats -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex mb-3">
                    <img src="@(string.IsNullOrEmpty(Model.Movie.PosterUrl) ? "https://via.placeholder.com/100x150" : Model.Movie.PosterUrl)"
                         class="rounded me-3" style="width: 70px; height: 100px; object-fit: cover;" alt="Poster">
                    <div>
                        <h5 class="mb-1">@Model.Movie.Title</h5>
                        <p class="text-muted mb-2 small">@Model.Movie.Director</p>
                        <span class="badge bg-primary">@Model.Movie.DurationInMinutes min</span>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted"><i class="bi bi-building me-2"></i>Cinema</span>
                    <span class="fw-semibold">@Model.CinemaHall.Cinema.Name</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted"><i class="bi bi-door-open me-2"></i>Hall</span>
                    <span class="fw-semibold">@Model.CinemaHall.Name</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted"><i class="bi bi-calendar me-2"></i>Date</span>
                    <span class="fw-semibold">@Model.StartTime.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted"><i class="bi bi-clock me-2"></i>Time</span>
                    <span class="fw-semibold">@Model.StartTime.ToString("hh:mm tt") - @Model.EndTime.ToString("hh:mm tt")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted"><i class="bi bi-currency-dollar me-2"></i>Base Price</span>
                    <span class="fw-semibold">@((Model.ShowSeats.FirstOrDefault()?.Price ?? 0).ToString("C0"))</span>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i>Statistics
            </div>
            <div class="card-body">
                <div class="row text-center mb-3">
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-success">@bookedSeats</div>
                        <small class="text-muted">Sold</small>
                    </div>
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-info">@availableSeats</div>
                        <small class="text-muted">Available</small>
                    </div>
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-warning">@lockedSeats</div>
                        <small class="text-muted">Locked</small>
                    </div>
                </div>

                <!-- Progress Bar -->
                @{
                    double bookedPct = totalSeats > 0 ? (double)bookedSeats / totalSeats * 100 : 0;
                    double lockedPct = totalSeats > 0 ? (double)lockedSeats / totalSeats * 100 : 0;
                }
                <div class="progress mb-3" style="height: 20px;">
                    <div class="progress-bar bg-success" style="width: @bookedPct%">@Math.Round(bookedPct)%</div>
                    <div class="progress-bar bg-warning" style="width: @lockedPct%"></div>
                </div>

                <div class="d-flex justify-content-between">
                    <span class="text-muted">Total Revenue</span>
                    <span class="fw-bold text-success fs-4">@revenue.ToString("C0")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Seat Map & Bookings -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-grid me-2"></i>Seat Availability
            </div>
            <div class="card-body">
                <div class="screen mb-3">SCREEN</div>

                <!-- Grid Container -->
                <div class="seat-grid" id="seatGrid"
                     style="grid-template-columns: repeat(@Math.Min(maxCols, 25), 32px); overflow-x: auto; justify-content: center;">

                    @foreach (var seat in Model.ShowSeats)
                    {
                        string statusClass = "available";
                        if (seat.Status == SeatStatus.Booked) statusClass = "booked";
                        else if (seat.Status == SeatStatus.Locked) statusClass = "locked";

                        <div class="seat @statusClass"
                             title="Row @((char)(seat.Seat.SeatRow + 64))@seat.Seat.SeatCol - @seat.Status">
                            @((char)(seat.Seat.SeatRow + 64))@seat.Seat.SeatCol
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-center gap-4 mt-3">
                    <div class="d-flex align-items-center">
                        <div class="seat available me-2" style="width: 24px; height: 24px;"></div>
                        <small>Available (@availableSeats)</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="seat booked me-2" style="width: 24px; height: 24px;"></div>
                        <small>Booked (@bookedSeats)</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="seat locked me-2" style="width: 24px; height: 24px;"></div>
                        <small>Locked (@lockedSeats)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Bookings Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-ticket-perforated me-2"></i>Recent Bookings</span>
                <a href="/Admin/Booking?showId=@Model.Id" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Ref #</th>
                                <th>User</th>
                                <th>Seats</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Bookings != null && Model.Bookings.Any())
                            {
                                foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookedDate).Take(5))
                                {
                                    <tr>
                                        <td>
                                            <span class="text-primary fw-bold">#@booking.Id</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                                <span>@booking.User?.UserName</span>
                                            </div>
                                        </td>
                                        <td>@booking.NumberOfSeats</td>
                                        <td>@booking.Amount.ToString("C0")</td>
                                        <td>
                                            @if (booking.StatusOfPayment == CineBooker.Enums.PaymentStatus.Approved)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">@booking.StatusOfPayment</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-3 text-muted">No bookings yet.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .seat {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        margin: 2px;
        cursor: default; 
        color: white;
    }

        .seat.available {
            background-color: #fff;
            border: 1px solid #ccc;
            color: #333;
        }

        .seat.booked {
            background-color: #dc3545; 
            border: 1px solid #dc3545;
        }

        .seat.locked {
            background-color: #ffc107; 
            border: 1px solid #ffc107;
            color: #333;
        }
</style>
}