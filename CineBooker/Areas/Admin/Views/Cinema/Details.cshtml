@model Cinema
@{
    ViewData["Title"] = "Cinema Details";
    var totalHalls = Model.CinemaHalls?.Count ?? 0;
    var totalSeats = Model.CinemaHalls?.Sum(h => h.Seats?.Count ?? 0) ?? 0;
}

<div class="page-header">
    <h1><i class="bi bi-building me-2"></i>Cinema Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Left Column: Info & Stats -->
    <div class="col-lg-4">
        <!-- Basic Info Card -->
        <div class="card mb-4">
            <div class="card-body">
                <h3 class="mb-1">@Model.Name</h3>
                <p class="text-muted mb-4">Cinema Location</p>

                <div class="mb-4">
                    <h6 class="text-muted mb-2"><i class="bi bi-geo-alt me-2"></i>Address</h6>
                    @if (Model.Address != null)
                    {
                        <p class="mb-0">@Model.Address.City</p>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No Address Linked</p>
                    }
                </div>

                <div class="row text-center border-top pt-3">
                    <div class="col-6 border-end">
                        <div class="fs-3 fw-bold text-primary">@totalHalls</div>
                        <small class="text-muted">Halls</small>
                    </div>
                    <div class="col-6">
                        <div class="fs-3 fw-bold text-success">@totalSeats</div>
                        <small class="text-muted">Total Seats</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Card (Static for now - needs Bookings logic) -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i>Statistics (Demo)
            </div>
            <div class="card-body">
                <div class="alert alert-light text-center small text-muted p-2">
                    Real-time statistics will be available once Booking module is active.
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Active Halls</span>
                    <span class="fw-bold">@totalHalls</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Today's Revenue</span>
                    <span class="fw-bold text-success">$0.00</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Halls & Schedule -->
    <div class="col-lg-8">

        <!-- Halls List -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-door-open me-2"></i>Cinema Halls</span>
                <a href="/CinemaHall/Create?cinemaId=@Model.Id" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Hall
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Hall Name</th>
                                <th>Capacity</th>
                                <th>Configuration</th> 
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CinemaHalls != null && Model.CinemaHalls.Any())
                            {
                                foreach (var hall in Model.CinemaHalls)
                                {
                                    var seatCount = hall.Seats?.Count ?? 0;
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@hall.Name</div>
                                        </td>
                                        <td>@seatCount seats</td>
                                        <td>
                                            <small class="text-muted">@(seatCount > 0 ? "Configured" : "Empty")</small>
                                        </td>
                                        <td class="text-end">
                                            <!-- Edit Hall -->
                                            <a href="/CinemaHall/Edit/@hall.Id" class="btn btn-sm btn-outline-info btn-action" title="Edit Hall">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <!-- Manage Seats -->
                                            <a href="/Seat/Index?hallId=@hall.Id" class="btn btn-sm btn-outline-secondary btn-action" title="Manage Seats">
                                                <i class="bi bi-grid-3x3"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        No halls added yet.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Schedule (Shows) -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-calendar-event me-2"></i>Shows (Upcoming)</span>
                <a href="/Show?cinemaId=@Model.Id" class="btn btn-sm btn-outline-primary">View All Shows</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Movie</th>
                                <th>Hall</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    <i class="bi bi-film d-block fs-3 mb-2"></i>
                                    Shows integration coming soon.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>