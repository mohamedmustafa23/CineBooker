@model CinemaHallVM
@{
    ViewData["Title"] = "Edit Cinema Hall";
    var totalCapacity = Model.Rows * Model.Columns;
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Cinema Hall</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <input type="hidden" id="CurrentRows" value="@Model.Rows" />
    <input type="hidden" id="CurrentCols" value="@Model.Columns" />

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-door-open me-2"></i>Hall Information
                </div>
                <div class="card-body">
                    <!-- Cinema Selection -->
                    <div class="form-floating mb-3">
                        <select asp-for="CinemaId" asp-items="@Model.CinemaList" class="form-select" required>
                            <option value="">Select Cinema</option>
                        </select>
                        <label asp-for="CinemaId">Cinema *</label>
                        <span asp-validation-for="CinemaId" class="text-danger"></span>
                    </div>

                    <!-- Hall Name -->
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Hall Name" required>
                        <label asp-for="Name">Hall Name *</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Configuration Info (Read Only) -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-grid-3x3 me-2"></i>Current Configuration
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-3 py-2 small">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Note:</strong> To change rows or columns, use "Manage Seats". This may affect existing bookings.
                    </div>
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <div class="text-muted small">Rows</div>
                            <div class="fs-4 fw-bold">@Model.Rows</div>
                        </div>
                        <div class="col-6">
                            <div class="text-muted small">Cols</div>
                            <div class="fs-4 fw-bold">@Model.Columns</div>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Total Capacity</span>
                        <span class="fw-bold fs-5">@totalCapacity seats</span>
                    </div>
                    <a href="/Admin/Seat/Index?hallId=@Model.Id" class="btn btn-outline-primary w-100 mt-3">
                        <i class="bi bi-grid-3x3 me-1"></i>Manage / Reset Seats
                    </a>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-lg me-1"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </div>

        <div class="col-lg-6">
            <!-- Seat Preview -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-eye me-2"></i>Current Seat Layout
                </div>
                <div class="card-body">
                    <div class="screen mb-3">SCREEN</div>
                    <!-- Grid Container -->
                    <div class="seat-grid" id="seatPreview"></div>

                    <div class="d-flex justify-content-center gap-4 mt-3">
                        <div class="d-flex align-items-center">
                            <div class="seat available me-2" style="width: 24px; height: 24px;"></div>
                            <small>Available</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Stats (Static for now) -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-bar-chart me-2"></i>Statistics
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Today's Shows</span>
                        <span class="fw-bold">--</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Avg. Occupancy</span>
                        <span class="fw-bold">--%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const preview = document.getElementById('seatPreview');

            const rows = parseInt(document.getElementById('CurrentRows').value) || 0;
            const cols = parseInt(document.getElementById('CurrentCols').value) || 0;

            preview.style.gridTemplateColumns = `repeat(${Math.min(cols, 20)}, 32px)`;

            const displayRows = Math.min(rows, 8);
            const displayCols = Math.min(cols, 20);

            if (rows === 0 || cols === 0) {
                preview.innerHTML = '<div class="text-center text-muted p-4">No seats configured yet.</div>';
                return;
            }

            for (let r = 1; r <= displayRows; r++) {
                for (let c = 1; c <= displayCols; c++) {
                    const seat = document.createElement('div');
                    seat.className = 'seat available';
                    seat.style.fontSize = '0.6rem';
                    seat.textContent = String.fromCharCode(64 + r) + c;
                    preview.appendChild(seat);
                }
            }

            if (rows > displayRows || cols > displayCols) {
                const note = document.createElement('div');
                note.className = 'text-muted text-center mt-2 small w-100';
                note.style.gridColumn = '1 / -1';
                note.textContent = `Preview clipped. Actual size: ${rows}x${cols}`;
                preview.appendChild(note);
            }
        });
    </script>
}