@using Microsoft.AspNetCore.Identity
@using CineBooker.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container-fluid">
        <button class="btn btn-link sidebar-toggle d-lg-none me-2" id="sidebarToggle">
            <i class="bi bi-list fs-4"></i>
        </button>

        <div class="d-flex align-items-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    @if (ViewContext.RouteData.Values["controller"] != null)
                    {
                        <li class="breadcrumb-item active">@ViewContext.RouteData.Values["controller"]</li>
                    }
                </ol>
            </nav>
        </div>

        <div class="d-flex align-items-center ms-auto">
            <div class="nav-item me-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="darkModeToggle" role="switch">
                    <label class="form-check-label" for="darkModeToggle">
                        <i class="bi bi-moon-stars" id="themeIcon"></i>
                    </label>
                </div>
            </div>

            <div class="dropdown me-3">
                <button class="btn btn-link position-relative" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-bell fs-5"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end notification-dropdown">
                    <li><h6 class="dropdown-header">Notifications</h6></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" href="#">
                            <i class="bi bi-ticket-perforated text-primary me-2"></i>
                            <span>New booking received</span>
                            <small class="text-muted d-block">2 minutes ago</small>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">
                            <i class="bi bi-film text-success me-2"></i>
                            <span>New movie added</span>
                            <small class="text-muted d-block">1 hour ago</small>
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#">
                            <i class="bi bi-person-plus text-info me-2"></i>
                            <span>New user registered</span>
                            <small class="text-muted d-block">3 hours ago</small>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-center" href="#">View all notifications</a></li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">

                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    var displayName = user?.FirstName ?? User.Identity?.Name;
                    var profilePic = !string.IsNullOrEmpty(user?.ProfilePicture)
                    ? user.ProfilePicture
                    : $"https://ui-avatars.com/api/?name={displayName}&background=random";

                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle show-dropdown-arrow" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@profilePic" alt="@displayName" class="rounded-circle border border-2 border-primary" width="40" height="40" style="object-fit: cover;">
                            <span class="ms-2 d-none d-lg-block fw-semibold text-body">@displayName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" aria-labelledby="userDropdown">
                            <li>
                                <div class="px-3 py-2">
                                    <div class="fw-bold">@displayName</div>
                                    <small class="text-muted">@user?.Email</small>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
                                    </a>
                                </li>
                            }

                            <li>
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    <i class="bi bi-person-gear me-2 text-primary"></i>Profile Settings
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("MyBookings", "Booking")">
                                    <i class="bi bi-ticket-perforated me-2 text-primary"></i>My Tickets
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-primary rounded-pill px-4" href="/Identity/Account/Login">Login</a>
                    <a class="btn btn-primary rounded-pill px-4" href="/Identity/Account/Register">Sign Up</a>
                }
            </div>
        </div>
    </div>
</nav>
