@{
    ViewData["Title"] = "Seat Details";
}

<div class="page-header">
    <h1><i class="bi bi-grid me-2"></i>Seat Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="1" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Seat Information
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="seat-preview d-inline-flex align-items-center justify-content-center bg-primary text-white rounded" style="width: 80px; height: 80px; font-size: 1.5rem;">
                        A1
                    </div>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Seat ID</span>
                    <span class="fw-bold">A1</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Row</span>
                    <span class="fw-bold">A</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Number</span>
                    <span class="fw-bold">1</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Type</span>
                    <span class="badge bg-primary">Standard</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Base Price</span>
                    <span class="fw-bold text-success">$15.00</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Status</span>
                    <span class="badge bg-success">Active</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-building me-2"></i>Location
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Cinema</span>
                    <span class="fw-bold">AMC Empire 25</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Hall</span>
                    <span class="fw-bold">Hall A (IMAX)</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Address</span>
                    <span>234 W 42nd St, NY</span>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i>Usage Statistics
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Total Bookings</span>
                    <span class="fw-bold">127</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Revenue Generated</span>
                    <span class="fw-bold text-success">$1,905.00</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Occupancy Rate</span>
                    <span class="fw-bold">78%</span>
                </div>
            </div>
        </div>
    </div>
</div>
