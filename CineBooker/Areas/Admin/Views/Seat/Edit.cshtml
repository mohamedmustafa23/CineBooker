@{
    ViewData["Title"] = "Edit Seat";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Seat</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-grid me-2"></i>Seat Information
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" name="Id" value="1" />

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="CinemaHall" value="AMC Empire 25 - Hall A (IMAX)" readonly disabled>
                        <label for="CinemaHall">Cinema Hall</label>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="RowLabel" name="RowLabel" value="A" required>
                                <label for="RowLabel">Row Label *</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="SeatNumber" name="SeatNumber" value="1" min="1" required>
                                <label for="SeatNumber">Seat Number *</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <select class="form-select" id="SeatType" name="SeatType" required>
                            <option value="Standard" selected>Standard</option>
                            <option value="Premium">Premium</option>
                            <option value="VIP">VIP</option>
                            <option value="Wheelchair">Wheelchair Accessible</option>
                        </select>
                        <label for="SeatType">Seat Type *</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="BasePrice" name="BasePrice" value="15.00" step="0.01" min="0" required>
                        <label for="BasePrice">Base Price ($) *</label>
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="true" checked>
                        <label class="form-check-label" for="IsActive">Active</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg me-1"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
