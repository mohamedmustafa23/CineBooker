@model ApplicationUser
@{
    ViewData["Title"] = "User Details";
}

<div class="page-header">
    <h1><i class="bi bi-person me-2"></i>User Details</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <img src="@Model.ProfilePicture" width="160" height="160" class="rounded-circle mb-3" alt="User Avatar">
                <h3 class="mb-1">@Model.FirstName @Model.LastName</h3>
                <p class="text-muted mb-3">@Model.Email</p>
                <span class="badge bg-primary fs-6 mb-3">@ViewBag.Role</span>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Personal Information
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Gender</span>
                    <span>@Model.Gender</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Date of Birth</span>
                    <span>@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "N/A")</span>
                </div>
                <hr>
                <h6 class="mb-3">Address</h6>
                <p class="text-muted mb-0">
                    @(Model.Address ?? "No address provided")
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-ticket-perforated me-2"></i>Booking History</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Booking ID</th>
                                <th>Movie</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center py-3 text-muted">Booking history integration required (Needs Repository)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>