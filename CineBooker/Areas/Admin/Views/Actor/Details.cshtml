@model Actor
@{
    ViewData["Title"] = "Actor Details";
}

<div class="page-header">
    <h1><i class="bi bi-person-video3 me-2"></i>Actor Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <img src="@Model.PhotoUrl" class="rounded-circle mb-3" alt="@Model.Name" style="width: 200px; height: 200px;">
                <h3 class="mb-1">@Model.Name</h3>
                <p class="text-muted mb-3">@Model.Gender</p>
                <div class="d-flex justify-content-center gap-3">
                    <div class="text-center">
                        <div class="fs-4 fw-bold text-primary">@Model.MovieActors.Count()</div>
                        <small class="text-muted">Movies</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>Biography
            </div>
            <div class="card-body">
                <p class="text-muted mb-0">
                    @Model.Bio
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-film me-2"></i>Filmography</span>
                <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#assignMovieModal">
                    <i class="bi bi-plus-lg me-1"></i>Assign to Movie
                </button>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Movie</th>
                                <th>Character</th>
                                <th>Year</th>
                                <th>Rating</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ma in Model.MovieActors)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@ma.Movie?.PosterUrl" class="rounded me-2" alt="Poster" style="width: 60px; height: 90px; object-fit: cover;">
                                            <div>
                                                <div class="fw-semibold">@ma.Movie.Title</div>
                                                <small class="text-muted">@ma.Movie.Director</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@ma.CharacterName</td>
                                    <td>@ma.Movie.ReleaseDate</td>
                                    <td>
                                        <span class="rating-stars"><i class="bi bi-star-fill"></i></span> @ma.Movie.AverageRating
                                    </td>
                                    <td class="text-end">
                                        <a href="/Admin/Movie/Details/@ma.Movie.Id" class="btn btn-sm btn-outline-info btn-action">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="assignMovieModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-film me-2"></i>Assign to Movie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-floating mb-3">
                    <select class="form-select" id="selectMovie">
                        <option value="">Select Movie</option>
                        <option value="5">Oppenheimer</option>
                        <option value="6">Ford v Ferrari</option>
                        <option value="7">Vice</option>
                    </select>
                    <label for="selectMovie">Movie</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="characterName" placeholder="Character Name">
                    <label for="characterName">Character Name</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>Assign
                </button>
            </div>
        </div>
    </div>
</div>
