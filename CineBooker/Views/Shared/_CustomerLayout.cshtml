@using Microsoft.AspNetCore.Identity
@using CineBooker.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CineMax</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top glass-effect border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <i class="bi bi-film text-primary me-2 fs-3"></i>
                <span class="fw-bold logo-text">Cine<span class="text-primary">Max</span></span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Home/Index">Home</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-link nav-link p-0 me-2" id="themeToggle" onclick="toggleTheme()">
                        <i class="bi bi-moon-stars-fill" id="themeIcon"></i>
                    </button>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var displayName = user?.FirstName ?? User.Identity?.Name;
                        var profilePic = !string.IsNullOrEmpty(user?.ProfilePicture)
                        ? user.ProfilePicture
                        : $"https://ui-avatars.com/api/?name={displayName}&background=random";

                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle show-dropdown-arrow" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@profilePic" alt="@displayName" class="rounded-circle border border-2 border-primary" width="40" height="40" style="object-fit: cover;">
                                <span class="ms-2 d-none d-lg-block fw-semibold text-body">@displayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2" aria-labelledby="userDropdown">
                                <li>
                                    <div class="px-3 py-2">
                                        <div class="fw-bold">@displayName</div>
                                        <small class="text-muted">@user?.Email</small>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>

                                @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a class="dropdown-item" asp-area="Identity" asp-controller="Profile">
                                        <i class="bi bi-person-gear me-2 text-primary"></i>Profile Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Home", "Index")">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary rounded-pill px-4" href="/Identity/Account/Login">Login</a>
                        <a class="btn btn-primary rounded-pill px-4" href="/Identity/Account/Register">Sign Up</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main id="mainContent" class="fade-in">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-5 mt-5 border-top bg-body-tertiary">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3 d-flex align-items-center">
                        <i class="bi bi-film text-primary me-2"></i>CineMax
                    </h5>
                    <p class="text-muted small">
                        Premium movie booking experience. Find the latest blockbusters and book your seats in seconds.
                    </p>
                </div>
            </div>
            <div class="row mt-4 pt-4 border-top">
                <div class="col-md-6 text-center text-md-start">
                    <small class="text-muted">&copy; 2024 CineMax. All rights reserved.</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);
        updateThemeIcon(savedTheme);

        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            html.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        }

        function updateThemeIcon(theme) {
            const icon = document.getElementById('themeIcon');
            if (theme === 'dark') {
                icon.className = 'bi bi-moon-stars-fill';
            } else {
                icon.className = 'bi bi-sun-fill text-warning';
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>